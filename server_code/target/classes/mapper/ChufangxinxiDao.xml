<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cl.dao.ChufangxinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cl.entity.ChufangxinxiEntity" id="chufangxinxiMap">
        <result property="yaopinmingcheng" column="yaopinmingcheng"/>
        <result property="danjia" column="danjia"/>
        <result property="kaifangshuliang" column="kaifangshuliang"/>
        <result property="fuyongfangfa" column="fuyongfangfa"/>
        <result property="qitafeiyong" column="qitafeiyong"/>
        <result property="xujiaojine" column="xujiaojine"/>
        <result property="zhanghao" column="zhanghao"/>
        <result property="shouji" column="shouji"/>
        <result property="kaifangshijian" column="kaifangshijian"/>
        <result property="yishengzhanghao" column="yishengzhanghao"/>
        <result property="dianhua" column="dianhua"/>
        <result property="qita" column="qita"/>
        <result property="ispay" column="ispay"/>
    </resultMap>

    <select id="selectListView"
		resultType="com.cl.entity.view.ChufangxinxiView" >

		SELECT  chufangxinxi.* FROM chufangxinxi  chufangxinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.cl.entity.view.ChufangxinxiView" >
		SELECT * FROM chufangxinxi  chufangxinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>



    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM chufangxinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM chufangxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM chufangxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM chufangxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM chufangxinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



</mapper>
